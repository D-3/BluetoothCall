<?xml version="1.0" encoding="utf-8"?><!-- 拨打电话 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/colorPrimaryBackground">

    <LinearLayout
        android:id="@+id/call_btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="60px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:id="@+id/btn_anwser"
            android:layout_width="@dimen/communicate_image_button_width"
            android:layout_height="@dimen/communicate_image_button_height"
            android:layout_centerInParent="true"
            android:layout_marginRight="90px"
            android:background="@drawable/green_connect"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/btn_decline"
            android:layout_width="@dimen/communicate_image_button_width"
            android:layout_height="@dimen/communicate_image_button_height"
            android:layout_centerInParent="true"
            android:background="@drawable/red_hangup"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_call_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="300px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40px"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/new_call_tip_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5px"
            android:paddingRight="5px"
            android:text="@string/new_call"
            android:textColor="@color/colorNewCall"
            android:textSize="45px"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/second_call_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70px"
            android:text="18888888888"
            android:textColor="@color/colorWhite"
            android:textSize="40px"/>

        <TextView
            android:id="@+id/second_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:text="广东深圳"
            android:textColor="@color/colorWhite"
            android:textSize="30px"/>

        <TextView
            android:id="@+id/second_call_type"
            android:layout_width="110px"
            android:layout_height="36px"
            android:layout_marginTop="10px"
            android:layout_marginBottom="75px"
            android:background="@drawable/call_bg"
            android:gravity="center"
            android:text="来电"
            android:textColor="@color/colorCallType"
            android:textSize="24px"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/primary_call_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="300px"
        android:layout_marginTop="40px"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/new_call_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5px"
            android:paddingRight="5px"
            android:text="@string/new_call"
            android:textColor="@color/colorNewCall"
            android:textSize="45px"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/primary_call_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70px"
            android:text="18888888888"
            android:textColor="@color/colorWhite"
            android:textSize="40px"/>

        <TextView
            android:id="@+id/primary_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:text="广东深圳"
            android:textColor="@color/colorWhite"
            android:textSize="30px"/>

        <TextView
            android:id="@+id/primary_call_type"
            android:layout_width="110px"
            android:layout_height="36px"
            android:layout_marginTop="10px"
            android:layout_marginBottom="75px"
            android:background="@drawable/call_bg"
            android:gravity="center"
            android:text="正在拨号"
            android:textColor="@color/colorCallType"
            android:textSize="24px"/>
    </LinearLayout>


</RelativeLayout>
