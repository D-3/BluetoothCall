<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="78px"
    android:gravity="center_vertical"
    android:minHeight="78px">

    <ImageView
        android:id="@+id/iv_bt_ic"
        android:layout_width="20px"
        android:layout_height="26px"
        android:layout_marginLeft="28px"
        android:src="@drawable/ico_bluetooth_small"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        android:visibility="visible" />

    <TextView
        android:id="@+id/device_name"
        android:layout_width="wrap_content"
        android:layout_height="78px"
        android:layout_marginLeft="72px"
        android:gravity="center_vertical"
        android:textColor="@color/bt_list_item_text_color"
        android:textSize="@dimen/bluetooth_item_text_size" />

    <!--<ImageView-->
        <!--android:id="@+id/conneting_ind"-->
        <!--android:layout_width="36px"-->
        <!--android:layout_height="36px"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_marginRight="72px"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:src="@drawable/loading_small"-->
        <!--android:scaleType="centerInside"-->
        <!--android:visibility="visible" />-->

    <ProgressBar
        android:id="@+id/conneting_ind"
        android:layout_width="36px"
        android:layout_height="36px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="72px"
        android:layout_centerVertical="true"
        android:indeterminateDrawable="@drawable/pg_connecting"
        android:indeterminate="true"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/connect_ind"
        android:layout_width="42px"
        android:layout_height="42px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="72px"
        android:layout_centerVertical="true"
        android:src="@drawable/bluetooth_connect"
        android:scaleType="centerInside"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/cb_del_ind"
        style="@style/CustomCheckboxTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="72px"
        android:layout_centerVertical="true"
        android:visibility="gone" />

</RelativeLayout>