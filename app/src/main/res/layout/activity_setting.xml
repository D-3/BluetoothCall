<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/activity_set"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/colorPrimaryBackground"
              tools:context="com.broadsense.newpine.bluetooth.ui.activity.SettingActivity">

    <!-- 蓝牙标题 -->
    <TextView
        android:id="@+id/bluetooth_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_bar_height"
        android:paddingLeft="60px"
        android:text="@string/settings_name"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/settings_name_size"
        android:gravity="center_vertical"
        android:background="@color/colorSettingsBarBackground"/>

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
