<?xml version="1.0" encoding="utf-8"?><!-- 拨打电话 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.broadsense.newpine.bluetooth.ui.activity.TestAnimatorActivity">

    <LinearLayout
        android:id="@+id/second_call_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40px"
        android:visibility="visible">
        <TextView
            android:id="@+id/new_call_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_call"
            android:textSize="45px"
            android:textColor="@color/colorNewCall"
            android:layout_marginBottom="40px"/>

        <TextView
            android:id="@+id/second_call_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="40px"
            android:text="18888888888"/>

        <TextView
            android:id="@+id/second_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:textColor="@color/colorWhite"
            android:textSize="30px"
            android:text="广东深圳"/>

        <TextView
            android:id="@+id/second_call_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12px"
            android:textColor="@color/colorCallType"
            android:textSize="24px"
            android:background="@drawable/call_bg"
            android:text="来电"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/primary_call_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40px"
        android:gravity="center"
        android:visibility="visible"
        android:background="#ff3243"
        android:elevation="20dp">
        <TextView
            android:id="@+id/primary_call_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="40px"
            android:text="18888888888"/>

        <TextView
            android:id="@+id/primary_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:textColor="@color/colorWhite"
            android:textSize="30px"
            android:text="广东深圳"
            android:elevation="20dp"/>

        <TextView
            android:id="@+id/primary_call_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12px"
            android:textColor="@color/colorCallType"
            android:textSize="24px"
            android:background="@drawable/call_bg"
            android:text="来电"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/call_btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">
        <Button
            android:id="@+id/btn_baochi_jieting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:text="保持接听"/>
        <Button
            android:id="@+id/btn_2_guaduan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:text="2路挂断"
            android:elevation="30dp"
            android:translationZ="10dp"/>
        <Button
            android:id="@+id/btn_1_guaduan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:text="1路挂断"/>
    </LinearLayout>
</RelativeLayout>
